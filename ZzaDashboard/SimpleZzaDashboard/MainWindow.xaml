<Window x:Class="SimpleZzaDashboard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleZzaDashboard"
        xmlns:viewModel="clr-namespace:SimpleZzaDashboard.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="600">
    <Grid>
        <Grid.DataContext>
            <viewModel:MainWindowViewModel/>
        </Grid.DataContext>
        <DataGrid Margin="10,10,10,80" ItemsSource="{Binding Path=Customers}" AutoGenerateColumns="True"/>
        <Button Content="Get" Margin="10,305,537,29" Command="{Binding Path=GetCommand}"/>
    </Grid>
</Window>
