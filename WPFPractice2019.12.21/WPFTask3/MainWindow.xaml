<Window x:Class="WPFTask3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFTask3"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="400">
    <Grid>
        <StackPanel Height="100" Width="200">
            <ComboBox Margin="5,5,5,10">
                <ComboBoxItem Content="Color combobox" IsSelected="True"/>
            </ComboBox>
            <TextBox Text="Text to enter" Margin="5,5,5,10"/>
            <TextBlock Text="Entered text with selected color" Margin="5,5,5,10"/>
        </StackPanel>
    </Grid>
</Window>
