<UserControl x:Class="WPFTask3._0.MyUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFTask3._0"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="200">
    <!--<UserControl.DataContext>
        <local:Handler/>
    </UserControl.DataContext>-->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Content="Task name:" Margin="5,5,5,0" Grid.Column="0" Grid.Row="0"/>
        <TextBlock  Margin="5,5,5,0" Grid.Column="1" Grid.Row="0" Text="{Binding Path=TaskName}"/>
        <Label Content="Description:" Margin="5,0,5,0" Grid.Column="0" Grid.Row="1"/>
        <TextBlock  Margin="5,0,5,0" Grid.Column="1" Grid.Row="1" Text="{Binding Path=Description}"/>
        <Label Content="Priority:" Margin="5,0,5,5" Grid.Column="0" Grid.Row="2"/>
        <TextBlock  Margin="5,0,5,5" Grid.Column="1" Grid.Row="2" Text="{Binding Path=Priority}"/>
    </Grid>
</UserControl>
