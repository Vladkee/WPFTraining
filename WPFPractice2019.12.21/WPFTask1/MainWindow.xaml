<Window x:Class="WPFTask1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFTask1"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBox Text="{Binding ElementName=Text1, Path=Content}" Grid.Column="0" Grid.Row="0" Margin="30,75,10,5" BorderBrush="Black"/>
        <Label x:Name="Text1" Content="Text1" Grid.Column="1" Grid.Row="0" Margin="10,75,30,5"/>
        <TextBox Text="{Binding ElementName=Text2, Path=Content}" Grid.Column="0" Grid.Row="1" Margin="30,5,10,75" BorderBrush="Black"/>
        <Label x:Name="Text2" Content="Text2" Grid.Column="1" Grid.Row="1" Margin="10,5,30,75"/>
    </Grid>
</Window>
