<Window x:Class="WPFTask2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFTask2"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="400">
    <Grid>
        <StackPanel Height="100" Width="300">
            <ProgressBar x:Name="ProgBar" Height="20" Width="280" Margin="0,10,0,10" Minimum="0" Maximum="100" Value="25"/>
            <Slider Height="20" Width="280" Margin="0,30,0,10" Minimum="0" Maximum="100" Value="{Binding ElementName=ProgBar, Path=Value}"/>
        </StackPanel>
    </Grid>
</Window>
