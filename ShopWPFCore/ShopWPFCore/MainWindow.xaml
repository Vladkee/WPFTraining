<Window x:Class="ShopWPFCore.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShopWPFCore"
        xmlns:model="clr-namespace:Shop.DAL.Model;assembly=Shop.DAL"
        xmlns:view="clr-namespace:ShopWPFCore.View"
        xmlns:viewModel="clr-namespace:ShopWPFCore.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <viewModel:MainWindowViewModel/>
    </Window.DataContext>
    <Window.Resources>
        <DataTemplate x:Key="ProductTemplate" 
                      DataType="{x:Type model:Product}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Image Grid.Column="0" 
                       Grid.Row="0" 
                       Margin="5" 
                       Source="{Binding Path=Image}" 
                       Width="75" Height="75"/>
                <StackPanel Grid.Column="1" 
                            Grid.Row="0" 
                            Margin="5">
                    <Label Content="{Binding Path=Brend}"/>
                    <Label Content="{Binding Path=Model}"/>
                </StackPanel>
            </Grid>
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="0.2*"/>
        </Grid.RowDefinitions>
        <ListView Margin="5" 
                  Grid.Column="0" 
                  Grid.Row="0" 
                  Grid.ColumnSpan="2" 
                  ItemsSource="{Binding Path=Products}" 
                  ItemTemplate="{StaticResource ProductTemplate}" 
                  SelectedItem="{Binding Path=SelectedProduct}" 
                  HorizontalAlignment="Stretch"/>
        <view:ProductInformationView  Margin="5" 
                                      Grid.Column="0" 
                                      Grid.Row="1" 
                                      Grid.ColumnSpan="2" 
                                      DataContext="{Binding Path=SelectedProduct}"/>
        <Separator Grid.Column="0"
                   Grid.Row="2" 
                   Grid.ColumnSpan="2" 
                   VerticalAlignment="Top"/>
        <Button Content="Delete" 
                Grid.Column="1" 
                Grid.Row="2" 
                Width="50" 
                Height="30" 
                Command="{Binding Path=DeleteCommand}"/>
        <Button Content="Default" 
                Grid.Column="0"
                Grid.Row="2" 
                Width="50" 
                Height="30" 
                Command="{Binding Path=DefaultCommand}"/>
        <Button Content="Add" 
                HorizontalAlignment="Left"
                Grid.Column="1"
                Grid.Row="2" 
                Width="50" 
                Height="30" 
                Command="{Binding Path=AddCommand}"/>
        <Button Content="Save" 
                HorizontalAlignment="Right"
                Grid.Column="1"
                Grid.Row="2" 
                Width="50" 
                Height="30" 
                Command="{Binding Path=SaveCommand}"/>
    </Grid>
</Window>
